/* pages/user/index.wxss */
page
{
  background-color: #f6f6f6;
}
.topview
{
  background-color: #1AC89E;
  width: 100%;
  height: 300rpx;
  position: relative;
}
.bg
{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}
.userinfo
{
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  color: #ffffff;
}
.avatar
{
  border: 3px solid rgba(255, 255, 255, 0.5);
}



.van-nav-bar__title
{
  color: #ffffff !important;
}

.page
{
  padding: 30rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
}
.rowitem
{
  width: 690rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.rowitem image
{
  width: 45rpx;
  margin-right: 20rpx;
}

.nodata
{
  margin-top: 50rpx;
}

.goOut view {
  position: fixed;
  bottom: 0;
  margin: 30rpx 65rpx;
  width: 600rpx;
  background-color: #ff676a;
  padding: 15rpx;
  border-radius: 50rpx;
  text-align: center;
  color: #fff;

}