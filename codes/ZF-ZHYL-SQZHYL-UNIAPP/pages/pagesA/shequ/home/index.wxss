/* pages/home/index.wxss */
@import '../../../../wxParse/wxParse.wxss';
page
{
  background-color: #f6f6f6;
}
.navbar
{
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  color: #ffffff;
  z-index: 10;
}
.space
{
  width: 100%;
  height: 20rpx;
  background-color: #f6f6f6;
}
.topImg {
  position: relative;
}
.top-icon {
  position: absolute;
  bottom: 250rpx;
  left: 20rpx;
}
.top-text {
  position: absolute;
  width: 180rpx;
  height: 50rpx;
  background: #1AC99F;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  right: 0;
  bottom: 20rpx;
  text-indent: 20rpx;
  color: #fff;
  /* font-size: 26rpx; */
  line-height: 50rpx;
  display: flex;
  align-items: center;
  z-index: 3;
}
.top-text .select {
  height: 13rpx;
  width: 25rpx;
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -6rpx;
}
.bg-white .select1 {
  height: 13rpx;
  width: 25rpx;
  margin-left: 5rpx;
}
.bg-white .title {
  text-align: center;
  font-weight: 900;
  font-size: 30rpx;
  padding: 30rpx 0;
}
.bg-white .content {
  padding: 0 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
.bg-white .hide {
  color: #1AC99F;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  padding: 20rpx 0;
}

.topimg
{
  width: 100%;
  vertical-align: top;
}
.menubody
{
  padding: 30rpx 25rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  background-color: #ffffff;
}
.menuitem
{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
  width: 155rpx;
  margin: 10.5rpx;
}
.menuitem image
{
  width: 100rpx;
  height: 100rpx;
}
.menuitem text
{
  font-size: 26rpx;
}
.funcbody
{
  background-color: #ffffff;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  width: 100%;
}
.funcbody .right
{
  margin-left: 18rpx;
}
.funcbody .left image
{
  width: 272rpx;
  height: 254rpx; 
  vertical-align: top;
}
.funcbody .right image
{
  width: 400rpx;
  height: 120rpx;
  vertical-align: top;
}
.listbody
{
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;    
  margin-top: 20rpx;
}

.nodata
{
  margin-top: 10rpx;
}