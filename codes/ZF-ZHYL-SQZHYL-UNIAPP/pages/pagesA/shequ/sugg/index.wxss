/* pages/sugg/index.wxss */
page
{
  background-color: #f6f6f6;
}

.page
{
  padding: 30rpx;
  box-sizing: border-box;
}
.item
{
  width: 690rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.date
{
  width: 100%;
  font-size: 24rpx;
  color: #999999;
  text-align: right;
}
.content
{
  margin-top: 20rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}

.filebox
{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.filebox video
{
  width: 196rpx;
  height: 168rpx;
  border-radius: 10rpx;
  margin: 8rpx;
}
.ssimg
{
  margin: 6rpx;
  background-color: #f6f6f6;
  margin-top: 15rpx;
}

.bom
{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #f6f6f6;
  padding: 30rpx 0;
  z-index: 10;
}
.bom .btn
{
  margin: 0 auto;
  background: linear-gradient(180deg, #0ED9AC 0%, #1AC89E 100%), #C4C4C4;
  border-radius: 40rpx;
  width: 580rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
}
.nodata
{
  margin-top: 100rpx;
}