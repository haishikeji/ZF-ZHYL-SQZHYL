/* pages/xlgroup/index.wxss */
.body
{
  padding: 30rpx;
  box-sizing: border-box;
  padding-top: 0;
}
.item
{
  border-bottom: 1rpx solid #f6f6f6;
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}
.item .info
{
  margin-left: 30rpx;
  width: 420rpx;
}
.item .num
{
  color: #19CAA0;
  display: flex;
  align-items: center;
}
.item .num image
{
  width: 26rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.richimg
{
  display: none;
}